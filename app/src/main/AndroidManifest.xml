<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brh.pronapmobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- SMS -->
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application android:name=".PronapApplication"
        android:allowBackup="true"
        android:icon="@drawable/brh_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".utils.SMSUtils"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="SMS_SENT"/>
                <action android:name="SMS_DELIVERED"/>
            </intent-filter>
        </receiver>

        <activity android:name=".activities.MainActivity"/>

        <activity android:name=".activities.LoginActivity" android:screenOrientation="portrait" >
          <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
        </activity>
        <activity android:name=".activities.RegisterActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.VendorActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.CardActivity" android:screenOrientation="portrait" />
    </application>

</manifest>
