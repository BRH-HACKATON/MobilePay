<resources>
    <!-- THEME 1 Styles
         BRH LIGHT BACKGROUND **** (Start)
    -->
    <style name="AppThemeBasic" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--item name="android:background">@color/colorLightGreyBasic</item-->
        <item name="buttonStyle">@style/PositiveButton</item>
        <item name="editTextStyle">@style/Entry.EditText</item>
    </style>

    <style name="AppThemeAccount" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorVariantPrimary</item>
    </style>

    <!-- Account Styles ** (Start) -->
    <style name="Account.Input.TextInputLayout" parent="AppThemeAccount">
        <item name="colorControlNormal">@color/colorVariantPrimaryBack</item>
        <item name="colorControlActivated">@color/colorBack</item>
        <item name="android:textColorHint">@color/colorVariantPrimaryBack</item>
    </style>

    <style name="Account.Input.ProceedButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBack</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!-- Account Login Styles ** (End) -->


    <!-- Forms Styles ** (Start) -->
    <style name="Entry.Title.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/colorWriting</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Entry.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWriting</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Entry.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="colorControlNormal">@color/colorVariantPrimaryBasic</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorVariantPrimary</item>
        <!--item name="colorControlHighlight">@color/colorVariantSecondary</item-->
    </style>
    <style name="Entry.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Forms Styles ** (End) -->

    <!-- Nomral Results Styles ** (Start) -->
    <style name="Key.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorWriting</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Value.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PositiveButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBack</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="NegativeButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Normal Results Styles ** (End) -->

    <!-- THEME 1 Styles
         BRH LIGHT BACKGROUND  ******** (End)
    -->

    <style name="PopupAnimation" >
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

</resources>
